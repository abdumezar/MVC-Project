@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post"> 
			<input class="text my-3" asp-for="FName" placeholder="First Name" required="">
			<input class="text my-3" asp-for="LName" placeholder="Last Name" required="">
			<input class="text my-3" asp-for="Email" placeholder="Email" required="">
			<input class="text my-3" asp-for="Password" placeholder="Password" required="">
			<input class="text my-3" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text my-3">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>

@section validationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}